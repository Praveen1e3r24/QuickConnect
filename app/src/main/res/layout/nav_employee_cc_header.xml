<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@drawable/headerbkg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/nav_profile_e_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_profile"/>
    <TextView
        android:id="@+id/nav_header_email_e_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCBC_QC@gmail.com"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/nav_header_contact_e_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contact@androidknowledge.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>